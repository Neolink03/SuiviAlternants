{% extends '::base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>
    <hr>
    <div class="row col-md-6">
        
        {% block head_form %} {{ form_start(courseForm, {'action': updateCourseActionUrl}) }} {% endblock %}
        
            <div class="form-group">
                {{ form_label(courseForm.name)}}
                {{ form_widget(courseForm.name)}}
                {{ form_errors(courseForm.name)}}
            </div>

            <div class="form-group">
                {{ form_label(courseForm.manager)}}
                {{ form_widget(courseForm.manager.selector, {'attr': {"class": 'custom-select'} }) }}
                {{ form_errors(courseForm.manager.selector) }}
            </div>
            
            <div class="form-group">
                {{ form_label(courseForm.coManager, 'Co-responsable de formation (optionnel)') }}
                {{ form_widget(courseForm.coManager.selector, {'attr': {"class": 'custom-select'} }) }}
                {{ form_errors(courseForm.coManager.selector)}}
            </div>
            
            <div class="form-group">
                {{ form_label(courseForm.secretariatContactDetails)}}
                {{ form_widget(courseForm.secretariatContactDetails, {'attr': {"rows": '8'} }) }}
                {{ form_errors(courseForm.secretariatContactDetails)}}
            </div>
            
            <div class="form-group">
                {{ form_label(courseForm.submit)}}
            </div>

            {{ form_widget(courseForm.submit, {'attr': {"class": 'form-control btn btn-primary'} }) }}

        {{ form_rest(courseForm) }}
    </div>
{% endblock %}