{% extends 'base.html.twig' %}

{% block title %}Détail contact entreprise{% endblock %}

{% block body %}
    <h1>{{ companyContact.companyName }}</h1>
    <hr />

    <table class="mb-3">
        <tbody>
            <tr>
                <th>Prénom du contact : </th>
                <td>{{ companyContact.firstNameContact }}</td>
            </tr>
            <tr>
                <th>Nom du contact : </th>
                <td>{{ companyContact.lastNameContact }}</td>
            </tr>
            <tr>
                <th>Email : </th>
                <td>{{ companyContact.email }}</td>
            </tr>
            <tr>
                <th>Téléphone : </th>
                <td>{{ companyContact.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>
            
    <div class="form-group">
        <a href="{{ path('companycontact_index', {'courseId': course.id}) }}"
           class="btn btn-secondary">
            
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
            Retourner sur la liste
        </a>
        
        <a href="{{ path('companycontact_edit', { 'courseId': course.id, 'id': companyContact.id }) }}"
           class="btn btn-primary">
            
            <i class="fa fa-pencil" aria-hidden="true"></i>
            Modifier
        </a>
            
        <a href="{{ path('companycontact_delete', { 'courseId': course.id, 'id': companyContact.id }) }}"
           class="btn btn-danger"> 
            <i class="fa fa-times" aria-hidden="true"></i>
            Supprimer
        </a>
    </div>
{% endblock %}
