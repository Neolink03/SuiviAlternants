{% extends 'base.html.twig' %}

{% block title %}Liste des contacts entreprise{% endblock %}

{% block body %}
    
    <h1>Liste des contacts entreprise</h1>
    <h2>{{ course.name }}</h2>
    <hr />

    <div class="mb-3">
        <a href="{{ path('course_manager.course', {'courseId': course.id}) }}"
        class="btn btn-secondary">

            <i class="fa fa-chevron-left" aria-hidden="true"></i>
            Retour sur la formation
        </a>

        <a href="{{ path('companycontact_new', {'courseId': course.id}) }}" class="btn btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> Ajouter un contact
        </a>
    </div>
    
    
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nom de la société</th>
                <th>Prénom du contact</th>
                <th>Nom du contact</th>
                <th>Email</th>
                <th>Téléphone</th>
            </tr>
        </thead>
        <tbody>
        {% for companyContact in course.companyContacts %}
            <tr>
                <td><a href="{{ path('companycontact_show', { 'courseId': course.id, 'id': companyContact.id }) }}">{{ companyContact.companyName }}</a></td>
                <td>{{ companyContact.firstNameContact }}</td>
                <td>{{ companyContact.lastNameContact }}</td>
                <td>{{ companyContact.email }}</td>
                <td>{{ companyContact.phoneNumber }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
