{% trans_default_domain 'FOSUserBundle' %}

<nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand" href="{{ path('homepage') }}"><i class="fa fa-home" aria-hidden="true"></i></a>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
            {% for item in menuItems %}
                <li class="nav-item">
                    <a class="nav-link {% if currentRoute == item.path %}active{% endif %}"
                       href="{{ path(item.path) }}">{{ item.title }}</a>
                </li>
            {% endfor %}
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                <div class="dropdown">
                    <a href="" class="nav-link dropdown-toggle" data-toggle="dropdown">{{ app.user.firstName }} {{ app.user.lastName }}</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('personalInformation') }}">Informations personnelles</a></li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans }} <i class="fa fa-sign-out" aria-hidden="true"></i>
                </a>
            </li>
        </ul>
    </div>
</nav>