{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/main.css') }}" rel="stylesheet">
    <link href="{{ ('/suivi_alternants/web/css/form.css') }}" rel="stylesheet">
{% endblock %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
    <h1>Changer le mot de passe</h1>
    <div id="courseManagerInformation">
        {{ form_start(changePassword) }}
        {{ form_row(changePassword.password.first) }}
        {{ form_row(changePassword.password.second) }}
        <input type="submit" value="Valider" class="btn btn-primary">
        {{ form_end(changePassword) }}
    </div>
{% endblock %}