<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="student.home" path="">
        <default key="_controller">AppBundle:Student:studentIndex</default>
    </route>

    <route id="student.company.edit" path="/company/application/{companyId}/edit">
        <default key="_controller">AppBundle:Student:companyEdit</default>
    </route>

    <route id="student.after_course.edit" path="/afterCourse/application/{afterCourseId}/edit">
        <default key="_controller">AppBundle:Student:afterCourseEdit</default>
    </route>
</routes>