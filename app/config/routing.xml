<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="public.login" path="/login">
        <default key="_controller">AppBundle:Security:login</default>
    </route>

    <import resource="@FOSUserBundle/Resources/config/routing/all.xml"/>
    <import resource="@AppBundle/Resources/config/routing/admin.xml" prefix="/admin"/>

    <route id="homepage" path="/">
        <default key="_controller">AppBundle:Common:index</default>
    </route>

    <route id="courseManager.addStudent" path="/course-manager/promotion/{promotionId}/create/student">
        <default key="_controller">AppBundle:CourseManager:addStudent</default>
    </route>

    <route id="student.showPersonalInformation" path="/student/informations/{studentId}">
        <default key="_controller">AppBundle:Student:displayPersonalInformations</default>
    </route>

    <import resource="@AppBundle/Resources/config/routing.yml"></import>

    <import resource="@FOSUserBundle/Resources/config/routing/all.xml"/>
    <import resource="@AppBundle/Resources/config/routing/admin.xml" prefix="/admin"/>
    <import resource="@AppBundle/Resources/config/routing/course_manager.xml" prefix="/course-manager"/>

</routes>



