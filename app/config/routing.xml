<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="public.login" path="/login">
        <default key="_controller">AppBundle:Security:login</default>
    </route>

    <import resource="@FOSUserBundle/Resources/config/routing/all.xml"/>

    <route id="homepage" path="/">
        <default key="_controller"></default>
    </route>

    <route id="admin.home" path="/admin">
        <default key="_controller">AppBundle:Admin:courseList</default>
    </route>
    <route id="admin.edit_course" path="/admin/course/create">
        <default key="_controller">AppBundle:Admin:createCourse</default>
    </route>
    <route id="admin.course_create_success" path="/admin/course/create/success">
        <default key="_controller">AppBundle:Admin:createCourseSuccess</default>
    </route>
    <route id="admin.workflow" path="/workflow">
        <default key="_controller">AppBundle:Admin:dumpWorkflow</default>
    </route>

    <route id="admin.add.user" path="/admin/add/user">
        <default key="_controller">AppBundle:Admin:userAdd</default>
    </route>

    <route id="courseManager.addStudent" path="/course-manager/promotion/{promotionId}/create/student">
        <default key="_controller">AppBundle:CourseManager:addStudent</default>
    </route>

    <route id="courseManager.addStudent" path="/student/informations/{studentId}">
        <default key="_controller">AppBundle:Student:displayPersonalInformations</default>
    </route>

</routes>



