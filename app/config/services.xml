<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="default" class="AppBundle\AppBundle">
            <argument type="service" id="debug.argument_resolver" />
        </service>

        <service id="app.factory.workflow" class="AppBundle\Services\WorkflowFactory">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="app.factory.user" class="AppBundle\Services\UserFactory">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="app.form.registration" class="AppBundle\Forms\Types\RegistrationType">
            <tag name="form.type" alias="app_user_registration" />
        </service>

        <service id="app.menu" class="AppBundle\Services\MenuBuilder">
        </service>

    </services>

</container>
